{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/http/*": [
        "./src/http/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
    },
    "types": [
      "cypress",
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "cypress/**/*.ts",
    "src/components/Card/__tests__/Card.test.jsx",
    "src/utils/__tests__/index.js",
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "**/**/**/*.test.tsx"
  ]
}